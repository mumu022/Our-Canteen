<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cart_backg"
    android:orientation="vertical"
    tools:context=".CartMenuActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="YOUR SELECTED FOODS"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:textColor="#45FDFD"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:text="ITEM LIST" />

    <EditText
        android:id="@+id/E_id"
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:hint="Enter ID"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/delete"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="20dp"
        android:text="REMOVE FROM LIST"
        android:textSize="15dp" />


    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="#55ff00"
    android:layout_marginVertical="370dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="TOTAL COST : "
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 Taka"
        android:textSize="30dp"
        android:textColor="#E11B0C"
        android:textStyle="bold"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/confirm"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/signup_button_backg"
        android:text="CONFIRM THE ORDER" />

</LinearLayout>





<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/option_backg"
    tools:context=".OptionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="PICK YOURS ONE"
            android:textColor="#FEFFFE"
            android:gravity="center_horizontal"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/breakfast_logo"
                android:onClick="LunchBreakfastMenu" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="-410dp"
                android:layout_marginTop="150dp"
                android:background="@drawable/lunch_logo"
                android:onClick="LunchLunchMenu" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/snack_logo"
                android:onClick="LunchSnackMenu" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="-410dp"
                android:layout_marginTop="150dp"
                android:background="@drawable/drinks_logo"
                android:onClick="LunchDrinksMenu" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/cart_logo"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="0dp"
                android:onClick="LunchCartMenu"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="-410dp"
                android:layout_marginTop="150dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/order_logo"
                android:onClick="LunchCreditMenu" />


        </LinearLayout>


    </LinearLayout>


</ScrollView>